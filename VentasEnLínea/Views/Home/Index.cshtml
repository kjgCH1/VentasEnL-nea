@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenidos</h1>
    <p>Puedes ver nuestro menú <a asp-area="" asp-controller="Producto" asp-action="BuscarProducto">acá</a>.</p>
    <style>
        /* Estilo para el carrusel */
        #carouselExampleIndicators {
            max-width: 400px; /* Ajusta el ancho máximo según tus preferencias */
            margin: 0 auto; /* Centra el carrusel horizontalmente en su contenedor */
        }

            /* Estilo para las imágenes del carrusel */
            #carouselExampleIndicators .carousel-inner img {
                max-width: 100%; /* Las imágenes del carrusel se ajustarán al 100% del ancho del carrusel */
                height: auto; /* Las imágenes mantendrán su relación de aspecto */
            }
    </style>
    <div class="d-flex">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block mx-auto img-fluid" src="~/imagen/1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img src="~/imagen/2.jpg" class="d-block mx-auto img-fluid" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block mx-auto img-fluid" src="~/imagen/3.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block mx-auto img-fluid" src="~/imagen/4.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img src="~/imagen/5.jpg" class="d-block mx-auto img-fluid" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block mx-auto img-fluid" src="~/imagen/6.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div> 
    </div>
</div>
