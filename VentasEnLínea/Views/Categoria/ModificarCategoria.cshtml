
@{
    ViewData["Title"] = "ModificarCategoria";
}
@model Entidades.Categoria;


<h1>Modificar Categoria</h1>
@if (!string.IsNullOrEmpty(ViewBag.Mensaje))
{
    <div class="@ViewBag.etiqueta" role="alert">@ViewBag.Mensaje</div>
}
<form method="post" asp-action="ModificarCategoria"
      onsubmit="return confirm('¿Estás seguro de modificar la categoria con el nombre ' + document.getElementById('Nombre').value + '?')">
    <div class="form-row">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" name="Nombre" required />
    </div>
    <div class="mb-3">
        <input asp-for="Id" type="hidden" class="form-control" name="Id" required />
        <input asp-for="Habilitado" type="hidden" class="form-control" name="Habilitado" required />
    </div>
    <button type="submit" class="btn btn-dark">Modificar</button>
</form>
